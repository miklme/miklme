<div id="header">
  <div id="logo">
    <%= link_to "Michael",new_user_searched_keyword_path(header) %>
    <%= link_to ".Me",user_path(header) %>
  </div>
  <div id="menu">
    <ul>
      <% if current_user.id==header.id %>
        <li>
          <%= link_to_unless_current ".Me",user_resources_path(header) %>
        </li>
        <li>
          <%= link_to_unless_current "关系网络",user_news_index_path(current_user) %>
        </li>
        <li><%= link_to_unless_current"我的关键字",user_controlled_keywords_path(header) %>
        </li>
      <% else %>
        <li>
          <%= link_to_unless_current ".Me（#{header.nick_name}）",user_resources_path(header) %>
        </li>
        <li>
          <%= link_to_unless_current "#{header.nick_name}的关系网络",user_news_index_path(header) %>
        </li>
        <li><%= link_to_unless_current "#{header.nick_name}的关键字",user_controlled_keywords_path(header) %>
        </li>
      <% end %>

      <% if header.id==current_user.id %>
        <li>
          <%= link_to_unless_current "个人设置",edit_user_path(current_user) %>
        </li>
        <li>
          <%= link_to '登出', session_path,:method => :delete %>
        </li>
      </ul>
    <% end %>
  </div>
</div>