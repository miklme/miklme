<% if current_user.followings.include?(user_profile_full)  %>
  <div>
    <span><%= link_to user_profile_full.nick_name,user_path(user_profile_full) %></span>
    <strong>（我已关注）</strong>
    <span><%= link_to "取消关注",user_be_follow_path(user_profile_full,user_profile_full.be_follows.find_by_follower_id(current_user.id)),:method => :delete,:confirm => "确定么？以后你将不能看到该用户的所有近况了。" %></span>
    <cite><%= "总经验值：#{user_profile_full.total_value}" %></cite>
  </div>
<% elsif current_user.followers.include?(user_profile_full)%>
  <div>
    <span><%= link_to user_profile_full.nick_name,user_path(user_profile_full) %></span>
    <strong>（关注我的人）</strong>
    <span><%= link_to "关注该用户",new_user_be_follow_path(user_profile_full) %></span>

    <cite><%= "总经验值：#{user_profile_full.total_value}" %></cite>
  </div>
<% elsif user_profile_full==current_user%>
  <div>
    <em><%= link_to user_profile_full.nick_name,user_path(user_profile_full) %></em>
    <cite><%=link_to_value_help%>：<%=user_profile_full.total_value%></cite>
  </div>
<% else %>
  <div>
    <span><%= link_to user_profile_full.nick_name ,user_path(user_profile_full)%></span>
    <span><%= link_to "关注该用户",new_user_be_follow_path(user_profile_full) %></span>
    <cite><%="总经验值：#{user_profile_full.total_value}" %></cite>
  </div>
<% end %>
<% if user_profile_full.province.present? %>
  <em>生日: <%= user_profile_full.birthday.to_s(:short) %>
    <%= user_profile_full.province %>省</em>
<% end %>
<% if  user_profile_full.city.present? %>
  <em>
    <%= user_profile_full.city %>市
  </em>
<% end %>
<em>用户ID <%= user_profile_full.id %></em>
