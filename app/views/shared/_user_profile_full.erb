<% if current_user.regard_real_friend?(user_profile_full)%>
  <div>
    <span><%= link_to user_profile_full.name,user_path(user_profile_full)%></span><span class="nick_name"><%= "（#{user_profile_full.nick_name}）" %></span>
    <strong>(我的真实朋友)</strong>
    <cite><%= "价值点数：#{user_profile_full.value}" %></cite>
  </div>
<% elsif current_user.interested_in?(user_profile_full)  %>
  <p>
    <span><%= link_to user_profile_full.nick_name,user_path(user_profile_full) %></span>
    <strong>（我关注的人）</strong>
    <cite><%= "价值点数：#{user_profile_full.value}" %></cite>
  </p>
<% elsif user_profile_full==current_user%>
  <p>
    <em><%= link_to user_profile_full.nick_name,user_path(user_profile_full) %></em>
    <cite><%= "价值点数：#{user_profile_full.value}" %></cite>
  </p>
<% else %>
  <p>
    <span><%= link_to user_profile_full.nick_name ,user_path(user_profile_full)%></span>
    <cite><em><%= link_to "价值点数：#{user_profile_full.value}" %></em></cite>
    <span><%= link_to "关注该用户",new_user_be_follow_path(user_profile_full) %></span>
  </p>
<% end %>
<em>生日: <%= user_profile_full.birthday %></em>
<% if  user_profile_full.city.present? %>
  <em><%= user_profile_full.province %>省<%= user_profile_full.city %>市</em>
<% end %>
<em>用户ID <%= user_profile_full.id %></em>
