<% if logged_in? %>
  <% if current_user.followings.include?(user)  %>
    <div>
      <div><%= link_to user.nick_name,user_path(user) %>
        <strong>已关注</strong></div>
      <p><cite><%=number_with_precision user.field_value(keyword_page) %></cite></p>
    </div>
  <% else %>
    <div>
      <div><%= link_to user.nick_name ,user_path(user)%></div>
      <cite><%=number_with_precision user.field_value(keyword_page)%></cite>
    </div>
  <% end %>
<% else %>
  <div>
    <div><%= link_to user.nick_name ,user_path(user)%></div>
    <cite><%=number_with_precision user.field_value(keyword_page)%></cite>
  </div>
<% end %>