<% form_for  ([@user,:resource,@comment]) do |f| %>
  <%= f.error_messages %>
<% if !@resource.commenters.include?(current_user) and current_user.keyword_pages.include?(@resource.keyword_page) and !current_user==form.resource.owner%>
  <p>
    <%=f.radio_button :rating,"-1"%>
    <strong>价值点数-1</strong>
    <%=f.radio_button :rating,"0" %>
    不评分
    <%=f.radio_button :rating,"1" %>
    <cite>价值点数+1</cite>
    <% if @resource.authority? %>
      <%=f.radio_button :rating,"3" %>
      <cite>价值点数+3</cite>
    <% end %>
  </p>
  <% end %>
  <p>
    <%= f.text_area :content,:size => "48x4"%>
  </p>
  <p>
    <%= f.submit '就这样',:onclick => "this.disabled = true" %>
  </p>
<% end %>