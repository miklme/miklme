<% form_for  ([form.resource.owner,:resource,form]) do |f| %>
  <div class="item_pink">
    <%= f.error_messages %>
    <p>给你的动作取个名字：<span class="sb_meta">（如：侮辱其人格，断其一指等等）</span>
    </p>
    <p>
      <%=f.text_field :action_one,:size => 4%>其 <%= f.text_field :action_two,:size => 4 %>
    </p>
  </div>
  <div class="comment_blank">
    <p>
      <% if !form.resource.commenters.include?(current_user) %>
        <%=f.radio_button :rating,1 %>
        <cite>支持
        </cite>
        <%=f.radio_button :rating,0%>
      <span class="grey">不表态</span>
        <%=f.radio_button :rating,-1%>
        <strong>攻击
        </strong>
      <% else %>
        <span class="grey">你已经表态过了</span>
      <% end %>
      <%= f.text_area :content,:size => "48x3"%>
    </p>
  </div>
  <p>
    <%= f.submit '就这样'%>
  </p>
<% end %>