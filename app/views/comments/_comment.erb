
<% x="comment_#{comment.id}" %>
<% y="comments_for_#{comment.id}" %>
<table class="qiantao" cellspacing="12" id="<%=x%>">
  <tr>
    <td width="60px">
      <%= render :partial => "shared/field_profile",:locals => {:user => comment.owner,:keyword_page => comment.resource.keyword_page} %>
    </td>
    <td class="td_content">
      <p>
      <%=variable_content comment%>      <span class="sentence">
        <%= comment_action(comment) %>,
        <%=distance_of_time_in_words(Time.zone.now, comment.created_at, false) %>
      </span></p>
      <span><%=link_to_reply_path(comment)%></span>


      <div id="<%=y%>">
        <% for replied_comment in comment.comments %>
          <%= render :partial  => "comment",:object => replied_comment %>
        <% end %>
      </div>
    </td>
  </tr>
</table>