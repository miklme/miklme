<table>
  <% @comments.each do |comment| %>
    <tr>
      <td><%=h comment.content %></td>
      <td><%= h comment.rating %></td>
    </tr>
  <% end %>
</table>

<% form_for([@user,@resource,@comment]) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :content %><br />
    <%= f.text_area :content,:size => '30*20' %>
  </p>
  <p>
    <%= f.submit '就这样' %>
  </p>
<% end %>