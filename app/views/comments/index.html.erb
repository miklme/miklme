<%@something=@resource.description%>
<h2><%= link_to_resource(@resource) %></h2>
<% for comment in @comments %>
  <%= render :partial => "comment",:object => comment %>
<% end %>

<% if logged_in? %>
  <table class="item" cellspacing="5">
      <tr>
        <td width="60">
          <%= render :partial => "shared/field_profile",:locals => {:user => current_user,:keyword_page => @resource.keyword_page}%>
        </td>
        <td width="520">
          <%= render :partial => "form",:object => @comment %>
        </td>
      </tr>
  </table>
<% end %>


