<div id="container">
  <div id="main">
    <div id="header">
      <div id="title">
        <h1>
          “<%= @resource.description or @resource.keywords %>”
        </h1></div>
    </div>
    <div id="sidenav">
      <h2>评论排序方式</h2>
      <ul>
        <li><%= link_to "用户价值点数" %></li>
        <li><%= link_to "时间" %></li>
      </ul>
    </div>
    <div id="content">
      <% for comment in @comments %>
        <div id="item">
          <div>
          <h1><%= link_to comment.owner.nick_name,user_path(comment.owner) %></h1>
          <span>价值点数：<%= comment.owner.value %></span>
          <div id="descr"><%=comment.created_at.advance(:hours => 8).to_s(:db)  %></div>
          </div>
          <p><%= h comment.content  %></p>
        </div>
      <% end %>
      <div id="item">
        <% form_for([@user,@resource,@comment]) do |f| %>
          <%= f.error_messages %>
          <p>
            <%= f.label :content,"发表评论：" %><br />
            <%= f.text_area :content,:size => '30*20' %>
          </p>
          <p>
            <%= f.submit '就这样' %>
          </p>
        <% end %>
      </div>
    </div>
    <div id="clearer"><span></span></div>
  </div>
</div>

