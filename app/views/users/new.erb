<%@page_title='（开始） '%>
<div id="header">
  <div id="logo"><%= link_to "Michael",new_session_path %></div>
  <div id="menu"></div>
</div>
<!--end header -->
<!-- main -->
<div id="main">
  <div id="content">
    <div id="sidebar">
      <div id="sidebar_top"></div>
      <div id="sidebar_bottom"></div>
    </div>
    <div id="text">
      <h1>由此开始：</h1>
      <% @user.password = nil %>
      <% @user.password_confirmation=nil %>
      <% form_for @user do |f| -%>
        <%=f.error_messages %>
        <table cellpadding="5" cellspacing="5">
          <tr><td><%= f.label :username,'登录帐号，请使用合法字符' %></td><td>        <%= f.text_field :username,:size => 23 %></td></tr>
          <tr><td><%= f.label :password,'密码，至少6位' %></td><td>  <%= f.password_field :password,:size => 23 %></td></tr>
          <tr><td><%= f.label :password_confirmation,'密码确认' %></td><td>  <%= f.password_field :password_confirmation,:size => 23 %></td></tr>
          <tr><td><%= f.check_box :terms%> <%= f.label :terms,'我同意Michael的' %><%=link_to "《使用协议》",:controller => :shared,:action => :xie_yi %></td><td><%=f.submit '注册'%></td></tr>
        </table>
      <% end -%>
    </div>
  </div>
  <!-- footer -->
  <%=render :partial=>'shared/footer'%>
  <!-- end footer -->
</div>
<!-- end main -->
