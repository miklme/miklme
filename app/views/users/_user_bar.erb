<% if logged_in? -%>
  <div id="user-bar-greeting">Logged in as <%= link_to_current_user :content_method => :email %></div>
  <div id="user-bar-action"  ><%= link_to "Log out", session_path,:method => :delete, { :title => "Log out" }    %></div>
<% else -%>
  <div id="user-bar-greeting"><%= link_to_login_with_IP 'Not logged in', :style => 'border: none;' %></div>
  <div id="user-bar-action"  ><%= link_to "Log in",  new_session_path,  { :title => "Log in" } %> /
  <%= link_to "Sign up", new_user_path, { :title => "Create an account" } %></div>
<% end -%>
