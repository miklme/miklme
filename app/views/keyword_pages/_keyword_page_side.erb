<div id="sw_aside">
  <div class="sw_menu" id="sw_rel">
    <div><%= link_to "<<返回首页",keyword_pages_path %></div>
    <h2>相关话题</h2>
    <!--暂时取消用户自定义的相关话题
    <% if logged_in? and current_user.controlled_keywords.include?(@keyword_page.keyword).present? %>
                <span><%=link_to "修改",keyword_page_related_keywords_path(@keyword_page),:popup => ['修改推广话题', 'height=500,width=450'] %>
                </span>
    <% end %>
    -->
    <ul>
      <% if not @searched_keywords.blank? %>
        <% for keyword in @searched_keywords %>
          <li>
            <span><%= link_to keyword.keyword,keyword_page_path(keyword)%></span>
          </li>
        <% end %>
      <% end %>
    </ul>
    <% if logged_in? %>
    <div><%= my_value %></div>
      <div>
        我在<span id="current_page"><%=h @keyword_page.keyword %></span>中的排名：
      <%= order(current_user,@keyword_page) %></div>
      <h2>
        最新回应我的
      </h2>
      <%= render :partial => "news/keyword_page_news",:collection => @news %>
    <% end %>
  </div>
</div>