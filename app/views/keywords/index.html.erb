
  <div id="main">
    <div id="content">
      <h2>别人可以通过以下关键字找到我：</h2>
      <p>
        <% for keyword in @user.keywords  %>
          <span>
            <%= link_to keyword.name,"/search/#{keyword.name}" %>
          </span>
        <% end %>
      </p>
      <h2>
        我可以编辑其页面的关键字：
      </h2>
      <p>
        <% for keyword in @my_keywords  %>
          <span>
            <%= link_to keyword.name,"/search/#{keyword.name}" %>
          </span>
        <% end %>
      </p>
      <div id="searched_keywords">
        <h2>
          我最近的搜索：
        </h2>
        <p>
          <%for keyword in @user.searched_keywords %>
            <span><%= keyword.name %></span>
          <% end %>
        </p>
      </div>
    </div>
  </div>





