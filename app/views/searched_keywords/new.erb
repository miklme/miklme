<div id="header">
  <div id="logo2">
    <h1><%= link_to "Mikl",new_searched_keyword_path %><%= link_to_me %></h1>
    <div id="search_link_url">
      <p>
        进入领域
        <%= link_to_remote "搜索人们在做什么",:url => {:action => :search_twitter}%>
      </p>
      <%= text_field 'keyword_page','keyword' %>
      <div class="auto_complete" id="keyword_page_keyword_auto_complete">
      </div>
      <%= auto_complete_field :keyword_page_keyword,:url => {:action => 'auto_complete_for_keyword_page_keyword'},:frequency => 0.1,:after_update_element =>
        "function(element,value){" + remote_function(:url => {:action => :create},:with=>"'keyword='+element.value") + "}"%>
      <div><%= link_to "新的分享",new_user_link_url_resource_path(current_user),:popup => true%></div>
    </div>

    <div id="search_twitter" style="display:none">
      <p>
        <%= link_to_remote "进入领域",:url => {:action => :search_link_url} %>
        搜索人们在做什么
      </p>
      <% form_tag :controller => :searched_contents,:action => :show do%>
        <%= text_field :twitter_resource,:content,:size => 46%>
        <%=submit_tag "搜索" %>
      <% end %>
    </div>
  </div>
</div>

<div id="main">
  <div class="top_users"> <p>价值点数最高的用户：
   
      <% for u in @top_users %>
        <%=link_to u.nick_name,user_path(u) %>(<%= u.total_value %>)
      <% end %>
    <p> <%= link_to_remote "更多，世界说>>>",:url => {:action => :about_all_keywords } %>
    </p>
    <div id="more" style="display:none">
      <p>最新建立的领域： <% for page in @new_keyword_pages %>
          <span><%= link_to page.keyword,keyword_page_path(page),:popup => true,:class => "keywords" %>
          </span>
        <% end %>
      </p>
      <p>
      价值点数较高的用户话题：
      <% for resource in @high_resources %>
        <span><%= link_to resource.description_or_title,user_blog_resource_path(resource.owner,resource),:popup => true,:class => "keywords" %>
        </span>
      <% end %>
      </p>
    </div>
  </div>
  <%= render :partial => "shared/footer" %>
</div>