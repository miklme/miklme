<body>
  <div id="header">
    <%= render 'shared/logo',:object => current_user %>
    <div id="menu">
      <ul>
        <li>
          <%= link_to ".Me",user_path(@user) %>
        </li>
        <% if current_user.id=@user.id %>
          <li><%= link_to "好友动态" %>
          </li>
          <li>
            <%= link_to "关系网络" %>
          </li>
          <li><%= link_to "我的关键字",user_keywords_path(@user) %>
          </li>
        <% else %>
          <li>
            <%= link_to "#{@user.nick_name}的关系网络" %>
          </li>
          <li><%= link_to "#{@user.nick_name}的关键字",user_keywords_path(@user) %>
          </li>
        <% end %>

        <li>
          <%= link_to "设置" %>
        </li>
        <li>
          <%= link_to '注册新用户',new_user_path %>
        </li>
        <li>
          <%= link_to '登出', session_path,:method => :delete %>
        </li>
      </ul>
    </div>
  </div>
  <!--end header -->
  <!-- main -->
  <div id="main">
    <div id="sidebar_left">
      <div id="my_friends">
        <h3>
          我得到的信息来自于这些人：
        </h3>
      </div>
      <div>
        <h3>
          这些人从我这里得到信息：
        </h3>
      </div>
    </div>

    <div id="content">
      <%if flash[:notice]%>
        <p><%=flash[:notice]%></p>
      <%end%>
      <%if flash[:error]%>
        <p><%=flash[:error]%></p>
      <%end%>
      <h2>你拥有的全部：<em><%= link_to "我的全部就是这些东西？" %></em></h2>
      <ul>
        <%= render @resources %>
      </ul>
      <span>
        <%= link_to "分享新链接",new_user_resource_path(@user) %>
      </span>
    </div>

    <div id="sidebar_right">
      <div id="searched_keywords">
        <h3>
          你感兴趣的关键字：
        </h3>
        <p>
          <%for keyword in @user.searched_keywords %>
            <span><%= keyword.name %></span>
          <% end %>
        </p>
      </div>
      <div id="keywords">
        <h3>
          你拥有的关键字：
        </h3>
        <p>
          <% for keyword in @user.keywords  %>
            <span>
              <%= keyword.name %>
            </span>
          <% end %>
        </p>
      </div>
    </div>
  </div>
  <!-- end main -->
  <!-- footer -->
  <%=render :partial=>'shared/footer'%>
  <!-- end footer -->
</body>




