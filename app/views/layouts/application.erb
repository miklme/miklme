<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <%= stylesheet_link_tag "main" %>
    <%= javascript_include_tag :defaults %>
    <title>
      <%=@page_title %>
    </title>
  </head>
  <body>

    <div id="header">
      <div id="logo">
        <%= link_to(image_tag('logo.png',:alt=>"Mikl.me",:mouse_over=>"images/logo_mouse_over.png"),"/")%>
      </div>
      <% if logged_in? -%>
        <%= link_to '登出', session_path, :method => :delete %>
      <%end%>
    </div>
    <div id="notice">
      <%if flash[:notice]-%>
        <div id="notice"><%=flash[:notice]%>
        </div>
      <%end%>
      <%if flash[:error] -%>
        <div id="error"><%=flash[:error]%>
        </div>
      <%end%>
    </div>
    <div id="body">
      <%=yield :layout%>
    </div>
    <div id="footer">
      <%=render :partial=>"sessions/footer"%>
    </div>
  </body>
</html>
