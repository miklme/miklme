<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Resources: <%= controller.action_name %></title>
    <%= stylesheet_link_tag 'default' %>
  </head>
  <body>
    <%= render :partial => "shared/header",:object => @user %>
    <div id="main">
      <div id="content">
        <% if flash[:notice] or flash[:error] %>
          <div id="notice">
            <%= flash[:error] or flash[:notice]%>
          </div>
        <% end %>
        <div id="sidebar">
          <div id="sidebar_top"></div>
          <div id="sidebar_text">
            <h2><%= link_to_unless_current "#{@user.nick_name}的原创" ,authority_user_link_url_resources_path(@user)%></h2>
            <h2><%= link_to_unless_current "#{@user.nick_name}的转载",not_authority_user_link_url_resources_path(@user) %></h2>
            <h2><%= link_to_unless_current "#{@user.nick_name}的生活",user_twitter_resources_path(@user) %></h2>
          </div>
          <div id="sidebar_bottom"></div>
        </div>
        <%= @content_for_layout %>
      </div>
      <%= render :partial => "shared/footer" %>
    </div>
  </body>
</html>
