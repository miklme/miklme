<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Keywords: <%= controller.action_name %></title>
    <%= javascript_include_tag :defaults,:cache => true  %>
    <%= stylesheet_link_tag "result"  %>
  </head>
  <body>
    <div style="background-image: url(../images/j2.jpg); opacity: 1" id="sw_im">
    </div>
    <div id="sw_page">
      <div id="sw_hdr">
        <div class="sw_tb">
          <ul>
            <li>
              <%= link_to "Mikl",new_searched_keyword_path %>
            </li>
            <li>
              <%= link_to_me %>
            </li>
          </ul>
        </div>
        <div class="sw_tbb"></div>
        <div class="sw_box">
          <h2><%= link_to "Mikl.Me",new_searched_keyword_path,:class => "sw_logo"%>
          </h2>
          <div class="sw_bd">
           <!--搜索框
           -->
          </div>
        </div>
      </div>
      <div id="sw_content">
        <div id="sw_canvas">
          <div id="sw_aside">
            <div id="sw_nav">
              <ul>
                <li>
                  <%= link_to "按用户价值点数排序",keyword_page_path(@keyword_page) %>
                </li>
                <li><%= link_to "按时间排序",by_time_keyword_page_path(@keyword_page)%></li>
              </ul>
            </div><div id="sc_expPane">
              <div class="sw_menu" id="sw_rel">
                <h2>目前所在领域</h2>
                <cite><%=h @keyword_page.keyword %></cite>
                <h2>相关领域</h2>
                <ul>
                  <% if not @related_keywords.blank? %>
                    <% for related_keyword in @related_keywords %>
                      <li>
                        <%= link_to highlight(related_keyword.name,@keyword_page.keyword),"/keyword_pages/#{KeywordPage.find_by_keyword(related_keyword.name).id}",:popup => true %>
                      </li>
                    <% end %>
                  <% end %>
                </ul>
                <h2>该领域内用户TOP10</h2>
                <ol>
                  <% for u in @keyword_page.users_by_value.ten %>
                    <li><%=link_to u.nick_name,user_path(u) %>（<strong><%= u.field_value(@keyword_page) %></strong>）</li>
                  <% end %>
                </ol>
              </div>
            </div>
          </div>
          <div id="content">
            <% if flash[:notice].present? %>
              <p>
                <strong><%=h flash[:notice] %></strong>
              </p>
            <% end %>
            <%= @content_for_layout %>
          </div></div></div></div>
    <%= render :partial => "shared/footer" %>
  </body>
</html>
