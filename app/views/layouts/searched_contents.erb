<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>Keywords: <%= controller.action_name %></title>
    <%= javascript_include_tag :defaults,:cache => true  %>
    <%= stylesheet_link_tag "result"  %>
  </head>
  <body>
    <div style="background-image: url(/images/j2.jpg); opacity: 1" id="sw_im">
    </div>
    <div id="sw_page">
      <div id="sw_hdr">
        <div class="sw_tb">
          <ul>
            <li>
              <%= link_to "Michael",keyword_pages_path %>
            </li>
            <li>
              <%= link_to_me %>
            </li>
          </ul>
        </div>
        <div class="sw_tbb"></div>
        <div class="sw_box">
          <h2><%= link_to "Michael",keyword_pages_path,:class => "sw_logo"%>
          </h2>
          <div class="sw_bd">
            <% form_tag :controller => :searched_contents,:action => :show do%>
              <%= text_field 'keyword_page','keyword',:size => 40 %>
              <div class="auto_complete" id="keyword_page_keyword_auto_complete">
              </div>
            <%= auto_complete_field :keyword_page_keyword,:url => {:controller => :keyword_pages,:action => 'auto_complete_for_keyword_page_keyword'},:after_update_element =>
                  "function(element,value){" + remote_function(:url => {:controller => :keyword_pages,:action => :redirect},:with=>"'keyword='+element.value") + "}"%>
              <%=submit_tag "搜索全部" %>
            <% end %>
          </div>
        </div>
      </div>
      <div id="sw_content">
        <div id="sw_canvas">
          <div id="sw_aside">
            <div id="sw_nav">
              <!--
              一个侧导航栏，列表方式显示
              -->
            </div>
          </div>
          <div id="content">
            <% if flash[:notice].present? %>
              <p>
                <strong><%=h flash[:notice] %></strong>
              </p>
            <% end %>
            <%= @content_for_layout %>
          </div></div></div></div>
    <%= render :partial => "shared/footer" %>
  </body>
</html>
