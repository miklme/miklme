<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>( Michael )</title>
    <%= javascript_include_tag :defaults,:cache => true  %>
    <%= stylesheet_link_tag "result"  %>
  </head>
  <body>
    
    <div id="sw_page">
      <div id="sw_hdr">
        <div class="sw_tb">
            <% if logged_in? %>
            <%= render :partial => "shared/keyword_page_header",:object => current_user %>
          <% else %>
            <%= render :partial => "shared/keyword_page_header"%>
          <% end %>
        </div>
        <div class="sw_tbb"></div>
      </div>
    </div>
    <div id="sw_content">
      <div id="sw_canvas">
        <div id="sw_aside">
          <div id="sc_expPane">
            <div class="sw_menu" id="sw_rel">
              <h2>目前所在关键字</h2>
              <span id="current_page"><%=link_to @resource.keyword_page.keyword,keyword_page_path(KeywordPage.find_by_keyword(@resource.keyword_page.keyword)) %></span>
              <h2>相关关键字</h2>
              <ul>
                <% if not @related_keywords.blank? %>
                  <% for related_keyword in @related_keywords %>
                    <li id="keyword_page">
                      <%= link_to related_keyword.name,keyword_page_path(related_keyword.keyword_page) %>
                    </li>
                  <% end %>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
        <div id="content">
          <% if flash[:notice].present? %>
            <p>
              <strong><%=h flash[:notice] %></strong>
            </p>
          <% end %>
          <%= @content_for_layout %>
          <div class="sb_pag">
            <%= will_paginate @comments, :prev_label => '上一页', :next_label => '下一页' %>
          </div>
        </div>
      </div>
    </div>
    <%= render :partial => "shared/footer" %>
  </body>
</html>
