<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
  "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
  <head>
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <title>( Michael )</title>
    <%= javascript_include_tag :defaults,:cache => true  %>
    <%= stylesheet_link_tag "result"  %>
  </head>
  <body>

    <div id="sw_page">
      <div id="sw_hdr">
        <div class="sw_tb">
          <% if logged_in? %>
            <%= render :partial => "shared/keyword_page_header",:object => current_user %>
          <% else %>
            <%= render :partial => "shared/keyword_page_header"%>
          <% end %>
        </div>

        <div class="sw_tbb"></div>
        <div class="sw_box">
          <h2><%= link_to "",keyword_pages_path,:class => "sw_logo"%>
          </h2>
          <div class="sw_bd">
            <%= render :partial => "shared/search_bar" %>
          </div>
        </div>
      </div>
    </div>
    <div id="sw_content">
      <div id="sw_canvas">
        <div id="sw_aside">
          <div id="sc_expPane">
            <div class="sw_menu" id="sw_rel">
              <span><%= link_to "<<返回贴吧主页",keyword_page_path(@resource.keyword_page) %></span>
            </div>
          </div>
        </div>
        <div id="content">
            <%   if flash[:notice].present?%>  <p class="notice"><%=flash[:notice] %></p>  <% end %>
            <%   if flash[:error].present?%> <p class="error"> <%=flash[:error]  %></p> <% end %>
          <%= @content_for_layout %>
          <div class="sb_pag">
            <%= will_paginate @comments, :prev_label => '上一页', :next_label => '下一页' %>
          </div>
        </div>
      </div>
    </div>
    <%= render :partial => "shared/footer" %>
  </body>
</html>
