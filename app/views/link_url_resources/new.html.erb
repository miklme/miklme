<div id="new_resource">
  <% form_for [@user,@link_url_resource] do |f|%>
    <%= f.error_messages %>
    <table>
      <tr><td><%= f.label :link_url,"链接地址*" %></td><td><%= f.text_field :link_url %></td></tr>
      <tr><td><%= f.label :description,"写一句简单的描述，请随意*：" %></td><td><%= f.text_field :description%></td></tr>
      <tr><td><%= f.label :form,"请指定目标链接所包含主体内容的类型*：" %></td><td><%= f.select :form,%w{ 文字、文档 视频 图片  音频  }%></td></tr>
      <tr><td><%= f.check_box :authority,{},true,false %><%= f.label :authority,"该内容是我的原创作品。" %></td>
    </table>
    <p><%= f.submit "下一步" %>
    </p>
  <% end %>
</div>