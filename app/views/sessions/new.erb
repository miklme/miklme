          <p>
            试一下，你就会相信。
          </p>
          <h1>2</h1>
          <p>
            <%= link_to ">注册新用户<",new_user_path %>  <%= link_to ">随便逛逛<",keyword_pages_path %>
          </p>
        </div>

      </div>
      <!-- footer -->
      <%=render :partial=>'shared/footer'%>
      <!-- end footer -->
    </div>
  </div>
  <!-- end main -->

</body>